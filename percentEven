public static double percentEven(int[] arr) {
    //below line takes care of empty and 0 elements
    if (arr.length == 0) {
        return 0.0;
        } 
    
    int count = 0;
    for (int i = 0; i < arr.length; i++) {
        if (arr.length == 0) {
        return 0.0;
        } 
        if (arr[i] % 2 == 0) {
            count++;
        }
    }
    return count * 100.0 / arr.length;
    
    
    
    
}
